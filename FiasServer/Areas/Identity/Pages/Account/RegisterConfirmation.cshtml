@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register confirmation";
}

<h1 class="title">@ViewData["Title"]</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
        <p>

            <a id="confirm-link" href="@Model.EmailConfirmationUrl">Щелкните для подтверждения вашего аккаунта</a>
        </p>
    }
    else
    {
        <p>
            Проверьте вашу почту для со ссылкой на подтверждение аккаунта.
        </p>
    }
}
